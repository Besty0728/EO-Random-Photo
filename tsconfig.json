{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "types": [
            "@cloudflare/workers-types",
            "node"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "functions/**/*.ts",
        "scripts/**/*.js",
        ".dev.vars",
        "**/*.d.ts"
    ]
}